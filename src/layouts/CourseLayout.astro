---
// src/layouts/CourseLayout.astro
import SidebarCourse from "../components/SidebarCourse.astro";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	courseSlug?: string;
	showHero?: boolean;
	showToc?: boolean;
}

const {
	title = "Course Title",
	description = "",
	image = "",
	courseSlug = "",
	showHero = true,
	showToc = false,
} = Astro.props;

const hasRightSidebar = Astro.slots.has("toc") || showToc;
---

<div class="h-full bg-white text-gray-900 flex">
	<!-- Left Sidebar -->
	<aside
		class="w-64 bg-gray-50 border-r border-gray-200 p-6 hidden lg:block flex-shrink-0"
	>
		<div class="sticky top-8">
			<SidebarCourse courseSlug={courseSlug} />
		</div>
	</aside>

	<!-- Main Content Area -->
	<div class="flex-1 flex overflow-hidden">
		<!-- Main Content -->
		<main
			class={`flex-1 p-8 overflow-y-auto ${hasRightSidebar ? "xl:pr-4" : ""}`}
		>
			<div class="max-w-4xl mx-auto">
				{
					showHero && (
						<div class="flex flex-col md:flex-row items-start gap-8 mb-10">
							<img
								src={image || "https://placehold.co/600x350"}
								alt={title}
								class="rounded-lg shadow w-full md:w-1/2 object-cover"
							/>
							<div class="flex-1">
								<h1 class="text-3xl font-extrabold mb-3 text-blue-800">
									{title}
								</h1>
								<p class="text-gray-700 mb-4">
									{description ||
										"Learn the core concepts with hands-on lessons and projects."}
								</p>
								<button class="px-5 py-2 bg-blue-700 hover:bg-blue-800 text-white rounded-lg transition">
									Start the course
								</button>
							</div>
						</div>
					)
				}

				<!-- MDX content renders here -->
				<section class={showHero ? "mt-8" : ""}>
					<slot />
				</section>
			</div>
		</main>

		<!-- Right Sidebar (TOC) -->
		{
			hasRightSidebar && (
				<aside class="w-64 p-6 hidden xl:block flex-shrink-0 border-l border-gray-100">
					<div class="sticky top-8 max-h-[calc(100vh-4rem)] overflow-y-auto">
						<slot name="toc" />
					</div>
				</aside>
			)
		}
	</div>
</div>
