---
import { getCollection } from "astro:content";

const pathname = Astro.url.pathname;
const courseSlug = Astro.props.courseSlug;

// Get chapters from the chapters collection
let chapters = [];
if (courseSlug) {
	const allChapters = await getCollection("chapters");
	chapters = allChapters
		.filter((item) => item.data.course === courseSlug)
		.sort((a, b) => a.data.chapterOrder - b.data.chapterOrder);
}

// Get all courses for the "All Courses" section
const allCourses = await getCollection("courses");
const courses = allCourses.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));

// Helper to get chapter slug from id (id is like "calculus/chapter-1-limits")
const getChapterSlug = (id: string) => id.split('/').pop() || id;
---

<nav class="space-y-6">
	{courseSlug && chapters.length > 0 && (
		<div>
			<h3 class="text-gray-500 uppercase text-xs font-semibold mb-3 tracking-wide flex items-center gap-2">
				<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
				</svg>
				Chapters
			</h3>
			<ul class="space-y-1">
				{chapters.map((chapter) => {
					const chapterSlug = getChapterSlug(chapter.id);
					const isActive = pathname.includes(`/${chapterSlug}`);
					return (
						<li>
							<a
								href={`/courses/${courseSlug}/${chapterSlug}`}
								class={`flex items-center gap-3 px-3 py-2 rounded-lg transition text-sm ${
									isActive
										? "bg-blue-100 text-blue-800 font-medium"
										: "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
								}`}
							>
								<span class={`flex-shrink-0 w-6 h-6 flex items-center justify-center rounded text-xs font-medium ${
									isActive
										? "bg-blue-600 text-white"
										: "bg-gray-200 text-gray-600"
								}`}>
									{chapter.data.chapterOrder}
								</span>
								<span class="truncate">{chapter.data.title}</span>
							</a>
						</li>
					);
				})}
			</ul>
		</div>
	)}
	
	<div class="pt-4 border-t border-gray-200">
		<h3 class="text-gray-500 uppercase text-xs font-semibold mb-3 tracking-wide flex items-center gap-2">
			<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
			</svg>
			All Courses
		</h3>
		<ul class="space-y-1">
			{courses.map((course) => {
				const isActive = pathname.includes(`/courses/${course.id}`);
				return (
					<li>
						<a
							href={`/courses/${course.id}`}
							class={`block px-3 py-2 rounded-lg transition text-sm ${
								isActive
									? "bg-blue-50 text-blue-800 font-medium"
									: "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
							}`}
						>
							{course.data.title}
						</a>
					</li>
				);
			})}
		</ul>
	</div>
</nav>
