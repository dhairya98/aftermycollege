---
// src/layouts/CourseLayout.astro
import SidebarCourse from "../components/SidebarCourse.astro";
const { title = "Course Title", description = "", image = "" } = Astro.props;
---

<div class="h-full bg-white text-gray-900 flex">
	<!-- Sidebar -->
	<aside class="w-64 bg-gray-50 border-r border-gray-200 p-6 hidden md:block">
		<SidebarCourse />
	</aside>

	<!-- Main Content -->
	<main class="flex-1 p-8 overflow-y-auto">
		<div class="max-w-5xl mx-auto">
			<div class="flex flex-col md:flex-row items-start gap-8 mb-10">
				<img
					src={image || "https://placehold.co/600x350"}
					alt={title}
					class="rounded-lg shadow w-full md:w-1/2 object-cover"
				/>
				<div class="flex-1">
					<h1 class="text-3xl font-extrabold mb-3 text-blue-800">
						{title}
					</h1>
					<p class="text-gray-700 mb-4">
						{
							description ||
								"Learn the core concepts with hands-on lessons and projects."
						}
					</p>
					<button
						class="px-5 py-2 bg-blue-700 hover:bg-blue-800 text-white rounded-lg transition"
					>
						Start the course
					</button>
				</div>
			</div>

			<!-- MDX content renders here -->
			<section class="mt-8">
				<article class="prose prose-slate max-w-none">
					<slot />
				</article>
			</section>
		</div>
	</main>
</div>
