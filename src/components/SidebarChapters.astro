---
import { getCollection } from "astro:content";

const { courseSlug } = Astro.props;
const pathname = Astro.url.pathname;

let chapters = [];

if (courseSlug) {
	const all = await getCollection("chapters");
	chapters = all
		.filter((c) => c.data.course === courseSlug)
		.sort((a, b) => a.data.chapterOrder - b.data.chapterOrder);
}

const getSlug = (id) => id.split("/").pop();
---

{
	chapters.length > 0 && (
		<nav class="space-y-6">
			<h3 class="text-xs uppercase font-semibold tracking-wide text-gray-500">
				Chapters
			</h3>

			<ul class="space-y-1">
				{chapters.map((chapter) => {
					const slug = getSlug(chapter.id);
					const active = pathname.includes(`/${slug}`);

					return (
						<li>
							<a
								href={`/courses/${courseSlug}/${slug}`}
								class={`flex items-center gap-3 px-3 py-2 rounded-lg text-sm transition ${
									active
										? "bg-blue-100 text-blue-800 font-medium"
										: "text-gray-700 hover:bg-gray-100"
								}`}
							>
								<span
									class={`w-6 h-6 rounded flex items-center justify-center text-xs font-semibold ${
										active
											? "bg-blue-600 text-white"
											: "bg-gray-200 text-gray-600"
									}`}
								>
									{chapter.data.chapterOrder}
								</span>
								<span class="truncate">
									{chapter.data.title}
								</span>
							</a>
						</li>
					);
				})}
			</ul>
		</nav>
	)
}
